{% extends 'base.html.twig' %}

{% block title %}New Task{% endblock %}

{% block body %}
    <h1 class="text-center mt-3">{{ 'Create new task'|trans }}</h1>

    {{ form_start(form, {method: 'POST', action: url('task_new')}) }}
    {{ form_widget(form) }}

    <div class="form-group">
        <button class="btn btn-primary pull-right" type="submit">
            <i class="fa fa-paper-plane" aria-hidden="true"></i> {{ 'Create'|trans }}
        </button>
    </div>

    {{ form_end(form) }}
{% endblock %}
